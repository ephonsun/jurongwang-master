<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white2"
    android:orientation="vertical" >

    <include layout="@layout/title_bar" />

    <LinearLayout
        style="@style/screen_margin_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/corner_round"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/spa74"
            android:background="@drawable/green_top_round"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/pad3" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="@dimen/spa74"
                android:layout_gravity="center_vertical"
                android:layout_weight="2"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="@string/presstel"
                    android:textColor="@color/white2"
                    android:textSize="@dimen/f18" />

                <TextView
                    android:id="@+id/tv_telephone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="@string/service_telephone"
                    android:textColor="@color/white2"
                    android:textSize="@dimen/f18" />
            </LinearLayout>

            <ImageView
                android:id="@+id/iv_call_service"
                android:layout_width="@dimen/spa68"
                android:layout_height="@dimen/spa68"
                android:layout_gravity="center_vertical"
                android:clickable="true"
                android:scaleType="center"
                android:src="@drawable/phone_icon" />
        </LinearLayout>

        <EditText
            android:id="@+id/et_opinion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:gravity="top"
            android:hint="@string/opinion_hint"
            android:maxHeight="250dp"
            android:minHeight="120dp"
            android:padding="@dimen/pad3"
            android:scrollbars="vertical"
            android:textColor="@color/textcolor"
            android:textColorHint="@color/colorhint"
            android:textSize="@dimen/f21" />
    </LinearLayout>

    <Button
        android:id="@+id/bt_submit"
        style="@style/screen_margin_style"
        android:layout_width="match_parent"
        android:layout_height="@dimen/spa72"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp"
        android:background="@drawable/blue_button_background_selector"
        android:text="确认提交"
        android:textColor="@color/white2"
        android:textSize="@dimen/f21" />

</LinearLayout>