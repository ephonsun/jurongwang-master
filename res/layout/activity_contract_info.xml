 <!-- 合同信息页面 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white2"
    android:orientation="vertical" >

    <include layout="@layout/title_bar" />

    <LinearLayout
        style="@style/screen_margin_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/pad1"
        android:background="@drawable/corner_round"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_projectinfo_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@drawable/green_top_round"
            android:gravity="center_vertical"
            android:minHeight="@dimen/spa72"
            android:paddingLeft="@dimen/pad3"
            android:text="办公楼装修项目"
            android:textColor="@color/white2"
            android:textSize="@dimen/f21" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/pad4"
            android:layout_marginTop="@dimen/pad4"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    style="@style/normal_textstyle"
                    android:layout_width="@dimen/contract"
                    android:layout_height="wrap_content"
                    android:gravity="right|center_vertical"
                    android:text="借款人:" />

                <TextView
                    android:id="@+id/tv_borrower"
                    style="@style/normal_textstyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.1"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    style="@style/normal_textstyle"
                    android:layout_width="@dimen/contract"
                    android:layout_height="wrap_content"
                    android:gravity="right|center_vertical"
                    android:text="借出人:" />

                <TextView
                    android:id="@+id/tv_lender"
                    style="@style/normal_textstyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="@dimen/pad4"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    style="@style/normal_textstyle"
                    android:layout_width="@dimen/contract"
                    android:layout_height="wrap_content"
                    android:gravity="right|center_vertical"
                    android:text="借款时间:" />

                <TextView
                    android:id="@+id/tv_borrow_time"
                    style="@style/normal_textstyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.1"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    style="@style/normal_textstyle"
                    android:layout_width="@dimen/contract"
                    android:layout_height="wrap_content"
                    android:gravity="right|center_vertical"
                    android:text="保障方式:" />

                <TextView
                    android:id="@+id/tv_protection_mode"
                    style="@style/normal_textstyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>