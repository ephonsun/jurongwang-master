<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include layout="@layout/title_bar1" />

    <include layout="@layout/identity" />

    <LinearLayout
        style="@style/screen_margin_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/corner_round"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/rl_recom_member"
            android:layout_width="match_parent"
            android:layout_height="@dimen/spa72"
            android:gravity="center_vertical" >

            <ImageView
                android:id="@+id/iv_imageView1"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:src="@drawable/recom_member" />

            <TextView
                style="@style/normal_textstyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:layout_toRightOf="@+id/iv_imageView1"
                android:text="有偿推荐会员"
                android:textSize="@dimen/f21" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:src="@drawable/listitem_arrow" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@drawable/sharp_line" />

        <RelativeLayout
            android:id="@+id/rl_declare_project"
            android:layout_width="match_parent"
            android:layout_height="@dimen/spa72"
            android:gravity="center_vertical" >

            <ImageView
                android:id="@+id/iv_imageView2"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:src="@drawable/recom_project" />

            <TextView
                style="@style/normal_textstyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:layout_toRightOf="@+id/iv_imageView2"
                android:text="有偿申报项目"
                android:textSize="@dimen/f21" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:src="@drawable/listitem_arrow" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@drawable/sharp_line" />

        <RelativeLayout
            android:id="@+id/rl_toBeDeputy"
            android:layout_width="match_parent"
            android:layout_height="@dimen/spa72"
            android:gravity="center_vertical" >

            <ImageView
                android:id="@+id/iv_imageView3"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:src="@drawable/invetment_normal" />

            <TextView
                style="@style/normal_textstyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:layout_toRightOf="@+id/iv_imageView3"
                android:text="成为投资者代表"
                android:textSize="@dimen/f21" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:src="@drawable/listitem_arrow" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>