<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white2"
    android:orientation="vertical" >

    <include layout="@layout/title_bar" />

    <LinearLayout
        style="@style/screen_margin_style"
        android:layout_width="match_parent"
        android:layout_height="@dimen/spa72"
        android:layout_gravity="center_vertical"
        android:background="@drawable/green_rounded_rectangle"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_messageTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/pad4"
            android:layout_weight="2"
            android:gravity="center_vertical"
            android:textColor="@color/white2"
            android:textSize="@dimen/f21" />

        <TextView
            android:id="@+id/tv_messageTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/pad4"
            android:layout_marginRight="@dimen/pad4"
            android:gravity="center_vertical"
            android:textColor="@color/white2"
            android:textSize="@dimen/f21"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="20" >

        <ScrollView
            style="@style/screen_margin_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/pad3"
            android:background="@drawable/corner_round" >

            <TextView
                android:id="@+id/tv_message_content"
                style="@style/screen_margin_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="100dp"
                android:paddingBottom="@dimen/pad4"
                android:textColor="@color/textcolor"
                android:textSize="@dimen/f21" />
        </ScrollView>
    </LinearLayout>

    <Button
        style="@style/blue_buttom_style"
        android:layout_width="match_parent"
        android:layout_height="@dimen/spa72"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="@dimen/pad3"
        android:layout_marginRight="@dimen/pad3"
        android:layout_marginTop="@dimen/pad3"
        android:text="чбошод" />

</LinearLayout>