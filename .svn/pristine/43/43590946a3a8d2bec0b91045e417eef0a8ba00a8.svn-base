<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white2"
    android:orientation="vertical" >

    <include layout="@layout/title_bar" />

    <LinearLayout
        style="@style/screen_margin_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/corner_round"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_projectinfo_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@drawable/green_rounded_rectangle"
            android:gravity="center_vertical"
            android:minHeight="@dimen/spa72"
            android:paddingLeft="@dimen/pad3"
            android:text="办公楼装修项目"
            android:textColor="@color/white2"
            android:textSize="@dimen/f21" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/pad3"
            android:paddingLeft="@dimen/pad3"
            android:paddingTop="@dimen/pad4" >

            <TextView
                style="@style/normal_textstyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="@string/credited_sum" />

            <TextView
                android:id="@+id/tv_credited_sum"
                style="@style/normal_textstyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/pad3"
                android:gravity="center_vertical" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/pad4"
            android:paddingLeft="@dimen/pad3"
            android:paddingTop="@dimen/pad4" >

            <TextView
                style="@style/normal_textstyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="@string/used_sum" />

            <TextView
                android:id="@+id/tv_used_sum"
                style="@style/normal_textstyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/pad3"
                android:gravity="center_vertical" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>